<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.okan.lenovo.otel.uyeol">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:text="anasayfa"
                    android:layout_alignParentLeft="true" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="rezervasyon" />


            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <EditText
        android:layout_marginStart="20dp"
        android:id="@+id/editText3"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText4"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:ems="20"
        android:hint="TC.No"
        android:inputType="number"
        android:textColor="@color/colorblack"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true" />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:ems="10"

        android:hint="İsim"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />

    <EditText
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText6"
        android:ems="10"
        android:hint="Soyisim"
        android:inputType="textPersonName"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_marginStart="20dp"
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText7"
        android:ems="10"
        android:padding="15dp"
        android:hint="Dog. Tarih"
        android:inputType="date"
        android:layout_marginLeft="20dp" />

    <EditText
        android:padding="15dp"
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText8"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="Mail"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="20dp" />

    <EditText
        android:padding="15dp"
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button11"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="Tel.No"
        android:inputType="phone"
        android:layout_marginLeft="20dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:text="KAYDET ve ANASAYFAYA DÖN"
        android:layout_alignParentLeft="true" />

    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:layout_toEndOf="@+id/editText3"
        android:text=""
        android:layout_toRightOf="@+id/editText3" />

    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="193dp"
        android:layout_toEndOf="@+id/editText3"
        android:text=""
        android:layout_toRightOf="@+id/editText3" />

    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/editText3"
        android:text=""
        android:layout_toRightOf="@+id/editText3" />

    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="189dp"
        android:layout_toEndOf="@+id/editText4"
        android:text=""
        android:layout_toRightOf="@+id/editText4" />

    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="133dp"
        android:layout_toEndOf="@+id/editText4"
        android:text=""
        android:layout_toRightOf="@+id/editText4" />

    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="79dp"
        android:layout_toEndOf="@+id/editText3"
        android:text=""
        android:layout_toRightOf="@+id/editText3" />


</RelativeLayout>
